<body>

  <h1>Daftar Produk</h1>

  <!-- Filter -->
  <div class="filter">
    <label for="filterKategori">Filter Kategori: </label>
    <select id="filterKategori">
      <option value="all">Semua</option>
      <option value="Elektronik">Elektronik</option>
      <option value="Fashion">Fashion</option>
      <option value="Makanan">Makanan</option>
    </select>
  </div>

  <!-- Container Produk -->
  <div class="container" id="produkContainer"></div>

  <script>
    // Array Data Produk
    const produk = [
      {
        nama: "Laptop Gaming",
        harga: 12000000,
        deskripsi: "Laptop dengan performa tinggi untuk gaming dan multitasking.",
        gambar: "Victus 15.jpeg",
        kategori: "Elektronik"
      },
      {
        nama: "Smartphone",
        harga: 5000000,
        deskripsi: "Smartphone canggih dengan kamera berkualitas.",
        gambar: "iPhone 11.jpeg",
        kategori: "Elektronik"
      },
      {
        nama: "Kaos Polos",
        harga: 75000,
        deskripsi: "Kaos polos nyaman dan modis.",
        gambar: "kaos polos hitam.jpeg",
        kategori: "Fashion"
      },
      {
        nama: "Celana Jeans",
        harga: 150000,
        deskripsi: "Celana jeans keren dan awet.",
        gambar: "celana jeans.jpeg",
        kategori: "Fashion"
      },
      {
        nama: "Nasi Goreng",
        harga: 25000,
        deskripsi: "Nasi goreng spesial dengan topping lengkap.",
        gambar: "special nasi goreng.jpeg",
        kategori: "Makanan"
      },
      {
        nama: "Burger",
        harga: 30000,
        deskripsi: "Burger lezat dengan daging sapi asli.",
        gambar: "burger.jpeg",
        kategori: "Makanan"
      }
    ];

    const container = document.getElementById("produkContainer");
    const filterSelect = document.getElementById("filterKategori");

    // Fungsi menampilkan produk
    function tampilkanProduk(filter) {
      container.innerHTML = ""; // kosongkan isi
      produk.forEach(item => {
        if (filter === "all" || item.kategori === filter) {
          const card = document.createElement("div");
          card.classList.add("card");
          card.innerHTML = `
            <img src="${item.gambar}" alt="${item.nama}">
            <h3>${item.nama}</h3>
            <p class="price">Rp ${item.harga.toLocaleString()}</p>
            <p>${item.deskripsi}</p>
            <small>Kategori: ${item.kategori}</small>
          `;
          container.appendChild(card);
        }
      });
    }

    // Event filter
    filterSelect.addEventListener("change", (e) => {
      tampilkanProduk(e.target.value);
    });

    // Pertama kali load tampilkan semua
    tampilkanProduk("all");
  </script>

</body>
</html>
