
CREATE DATABASE ecommerce;


USE ecommerce;


CREATE TABLE produk (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nama VARCHAR(100) NOT NULL,
    harga INT NOT NULL,
    kategori VARCHAR(50) NOT NULL,
    deskripsi TEXT
);

